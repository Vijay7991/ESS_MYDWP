<UserControl x:Class="MYDWP.Cards.LeaderShipChard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MYDWP.Cards"
             mc:Ignorable="d" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Leaderspeak" FontSize="15" FontWeight="Bold" Foreground="Black" Margin="10 1"/>
            <Label Grid.Row="1" Content="MR.Jhon Doe" FontSize="15" FontWeight="Bold" Foreground="Black" Margin="10 1"/>
            <Border Grid.Row="2" Margin="2" CornerRadius="30" HorizontalAlignment="Left" Background="LightGoldenrodYellow">
                <Label Content="Executive Vice Chairman" FontSize="15"  FontWeight="Bold" Foreground="OrangeRed" Margin="10 1"/>
            </Border>
        </Grid>
         <Image Grid.Row="1" Source="pack://application:,,,/Resource/LeadershipImage.png" Stretch="UniformToFill" Margin="10"/>
    </Grid>
</UserControl>
