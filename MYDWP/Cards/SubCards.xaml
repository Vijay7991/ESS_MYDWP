<UserControl x:Class="MYDWP.Cards.SubCards"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MYDWP.Cards"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border CornerRadius="10" Background="White" Padding="15">
    <StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" Margin="0,0,0,10">
            <Border Width="50" Height="30" Background="{Binding IconBackground}" CornerRadius="6" HorizontalAlignment="Left">
                <Image Source="{Binding Icon}" Width="18" Height="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <TextBlock Text="{Binding Title}" FontSize="16" Foreground="#5a6e7f" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>
        <TextBlock Text="Applied For" FontWeight="Bold" FontSize="13" Foreground="#2d3e50"/>
        <TextBlock Text="{Binding AppliedCount}" FontSize="24" Foreground="#2d3e50" Margin="0,5,0,0"/>
        <TextBlock Text="{Binding PendingText}" Foreground="Red" FontWeight="Bold" Margin="0,10,0,0"/>
    </StackPanel>
    </Border>

</UserControl>
