<UserControl x:Class="MYDWP.View.UserRegistor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MYDWP.View"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="350">
    <UserControl.Resources>
        <Style x:Key="LabelTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Padding" Value="5,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <Grid Margin="20" Background="AntiqueWhite">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Header -->
        <TextBlock Text="Register"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Grid.ColumnSpan="2"
                   Margin="0,0,0,20"/>

        <TextBlock Text="Username:" Grid.Row="1" Grid.Column="0" Style="{StaticResource LabelTextBlockStyle}"/>
        <Border CornerRadius="10" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="5" BorderThickness="1" BorderBrush="Black">
            <TextBox Padding="5" Background="Transparent" BorderBrush="Transparent" Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"/>
        </Border>

        <TextBlock Text="Email:" Grid.Row="2" Grid.Column="0" Style="{StaticResource LabelTextBlockStyle}"/>
        <Border CornerRadius="10" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="5" BorderThickness="1" BorderBrush="Black">
            <TextBox Padding="5" Background="Transparent" BorderBrush="Transparent" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
        </Border>

        <TextBlock Text="Password:" Grid.Row="3" Grid.Column="0" Style="{StaticResource LabelTextBlockStyle}"/>
        <Border CornerRadius="10" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Margin="5" BorderThickness="1" BorderBrush="Black">
            <TextBox Padding="5" Background="Transparent" BorderBrush="Transparent" 
                     Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" />
        </Border>

        <TextBlock Text="Phone Number:" Grid.Row="4" Grid.Column="0" Style="{StaticResource LabelTextBlockStyle}"/>
        <Border CornerRadius="10" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" Margin="5" BorderThickness="1" BorderBrush="Black">
            <TextBox Padding="5" Background="Transparent" BorderBrush="Transparent" Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"/>
        </Border>
            <Button Content="Register"  Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" 
                    BorderThickness="0" Padding="5" Background="LightBlue"
                    BorderBrush="Transparent" Width="120"  IsEnabled="True"
                    Command="{Binding RegisterCommand}" />

        <TextBlock Grid.Row="6" Grid.ColumnSpan="2" Foreground="Red" Text="{Binding ErrorMessage}" Margin="5" TextWrapping="Wrap"/>
    </Grid>
</UserControl>